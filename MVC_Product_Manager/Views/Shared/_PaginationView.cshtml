@model MVC_Product_Manager.Models.Pagination
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor _httpContextAccessor
@{
    string search = _httpContextAccessor.HttpContext.Request.Query["search"].ToString();
}
<div class="container">
    @{
        if (Model.TotalPages > 0)
        {
            <ul class="pagination justify-content-center">
                @{
                    if (Model.CurrentPage > 1)
                    {
                        <li class="page-item">
                            <a class="page-link"  asp-action="Index" asp-route-pg="1" asp-route-search="@search">Erste Seite</a>
                        </li>
                        <li>
                            <a class="page-link"  asp-action="Index" asp-route-pg="@(Model.CurrentPage - 1)" asp-route-search="@search">Vorherige</a>
                        </li>
                    }
                }
                @for (var pge = Model.StartPage; pge <= Model.EndPage; pge++)
                {
                    <li class="page-item" @(pge == Model.CurrentPage ? "active" : "")>
                        <a class="page-link"  asp-action="Index" asp-route-pg="@pge" asp-route-search="@search">@pge</a>
                    </li>
                }
                @{
                    if (Model.CurrentPage < Model.TotalPages)
                    {
                        <li class="page-item">
                            <a class="page-link"  asp-action="Index" asp-route-pg="@(Model.CurrentPage +1)" asp-route-search="@search">Nächste</a>
                        </li>
                        <li>
                            <a class="page-link"  asp-action="Index" asp-route-pg="@(Model.TotalPages)" asp-route-search="@search">Letzte</a>
                        </li>
                    }
                }
            </ul>
        }
    }
</div>